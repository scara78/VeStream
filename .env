# VeStream Environment Variables

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=VeStream

# TMDB API (Required)
NEXT_PUBLIC_TMDB_API_KEY=your_tmdb_api_key_here

# API Endpoints
NEXT_PUBLIC_GIFTED_API_URL=https://api.giftedapi.top

# Analytics (Optional)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PWA=true

# Performance
NEXT_PUBLIC_IMAGE_QUALITY=85
NEXT_PUBLIC_VIDEO_QUALITY_DEFAULT=720p

# Build Configuration
ANALYZE=false
NODE_ENV=development
